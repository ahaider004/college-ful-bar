    <body>
        <section id="main" class="wrapper">
            <div id="enroll" class="container">
                <div id="view" class="container">
                    <h1>Enroll Classes</h1>
                    <h2>Choose Which Course</h2>
                    <table>
                        <tbody>
                            <tr>
                                <th> Course Name </th>
                                <th> Section </th>
                                <th> Instructor </th>
                                <th> Room </th>
                                <th> Seats </th>
                                <th> Credits </th>
                                <th> Cost </th>
                                <th> Department </th>
                                <th> Year </th>
                                <th> Semester </th>
                            </tr>
                            {{#each items}}
                            <tr>

                                <td>{{this.name}}</td>
                                <td>{{this.section}}</td>
                                <td>{{this.instructor}}</td>
                                <td>{{this.room}}</td>
                                <td>{{this.seats}}</td>
                                <td>{{this.credits}}</td>
                                <td>{{this.cost}}</td>
                                <td>{{this.Department}}</td>
                                <td>{{this.Year}}</td>
                                <td>{{this.Semester}}</td>
                                <td><a href="/enroll/{{id}}">Enroll</a></td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>


            </div>
        </section>


    </body>