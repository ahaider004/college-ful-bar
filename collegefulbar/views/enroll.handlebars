<header>
    <nav>
        <h4>Collegefulbar</h4>
        <ul>
            <li><a href="/view"></a>View</li>
            <li><a href="/enroll"></a>Enroll</li>
            <li><a href="/grades"></a>Grades</li>
            <form method="post">
                <button formaction="/logout" class="pure-button button-small">logout</button></center>
            </form>
        </ul>
